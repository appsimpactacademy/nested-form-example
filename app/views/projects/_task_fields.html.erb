<div class="nested-fields mb-3 border p-3 rounded">
  <%= f.hidden_field :_destroy, class: 'hidden-destroy' %>
  
  <div class="mb-3">
    <%= f.label :task_type_id, "Task Type", class: 'form-label' %>
    <%= f.collection_select :task_type_id, TaskType.all, :id, :name, { prompt: "Select Task Type" }, class: 'form-control task-type-select', data: { tasks_target: 'taskTypeSelect' } %>
  </div>
  
  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  
  <div class="mb-3">
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  
  <div class="d-flex justify-content-between">
    <%= link_to 'Remove Task', '#', class: 'btn btn-danger btn-sm', data: { action: 'click->tasks#removeTask' } %>
  </div>
</div>
